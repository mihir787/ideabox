<%= form_for(@idea) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title  %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :category %>
  <%= f.collection_select :category_id, Category.all, :id, :name%>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit %>
<% end %>
